#include <stdio.h>
#include <string.h>

#define TAM 5

typedef struct {
    char nome[50];
    char cor[20];
    int tropas;
} Territorio;

int main() {
    Territorio territorios[TAM];
    
    // Cadastro dos territ√≥rios
    for (int i = 0; i < TAM; i++) {
        printf("Territorio %d:\n", i + 1);
        printf("Nome: ");
        fgets(territorios[i].nome, 50, stdin);
        territorios[i].nome[strcspn(territorios[i].nome, "\n")] = '\0';
        
        printf("Cor do exercito: ");
        fgets(territorios[i].cor, 20, stdin);
        territorios[i].cor[strcspn(territorios[i].cor, "\n")] = '\0';
        
        printf("Numero de tropas: ");
        scanf("%d", &territorios[i].tropas);
        getchar(); // Limpar o buffer do teclado
    }
    
    // Exibir o mapa
    printf("\n=== MAPA ATUAL ===\n");
    for (int i = 0; i < TAM; i++) {
        printf("Territorio: %s | Cor: %s | Tropas: %d\n", 
               territorios[i].nome, territorios[i].cor, territorios[i].tropas);
    }
    
    return 0;
}
